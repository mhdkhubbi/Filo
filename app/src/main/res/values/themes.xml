<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- 1. The Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FFFFFF</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_container</item>
        <!-- This points to the theme below -->
        <item name="postSplashScreenTheme">@style/Theme.Filo</item>
    </style>

    <!-- 2. The Base Application Theme (The "Missing Symbol") -->
    <style name="Theme.Filo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your primary colors here -->
        <item name="colorPrimary">#0791F8</item>
        <item name="android:statusBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


</resources>